<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="PrimaryText" parent="Title">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PrimaryTextSmall" parent="Title">
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="SecondaryText">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="SecondaryLightText" parent="SecondaryText">
        <item name="android:textColor">@color/gray_lighter</item>
    </style>

    <style name="SubtitleText">
        <item name="android:textColor">@color/gray_light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
    </style>
</resources>